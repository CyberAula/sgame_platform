<script>
	var settings = <%=raw @game_settings.to_json%>;
	$(document).ready(function(){
		$("#game").load(function(){
			try {
				document.getElementById("game").contentWindow.SGAME.loadSettings(settings);
			} catch (e){ }
		});
	});
</script>

<iframe id="game" class="gameTemplateIframe" src='<%=Utils.checkUrlProtocol(@game.template.url_full,request.protocol)%>' width="100%" height="100%" scrolling="no" iframeborder="0" frameborder="0" iframeElement.frameBorder = 0; webkitAllowFullScreen="true" allowfullscreen="true" mozallowfullscreen="true">
</iframe>